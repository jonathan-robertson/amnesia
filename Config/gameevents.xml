<config>
    <append xpath="/gameevents">
        <action_sequence name="amnesia_pay_from_bag">
            <action class="RemoveItems">
                <property name="items_location" value="Backpack" />
                <property name="items_tags" value="amnesiaCurrency" />
            </action>
        </action_sequence>
        <action_sequence name="amnesia_pay_from_blt">
            <action class="RemoveItems">
                <property name="items_location" value="Toolbelt" />
                <property name="items_tags" value="amnesiaCurrency" />
            </action>
        </action_sequence>
        <action_sequence name="amnesia_request_change">
            <action class="AddBuff">
                <property name="buff_name" value="buffAmnesiaRequestChangeCallback" />
                <property name="check_already_exists" value="false" />
            </action>
        </action_sequence>
        <action_sequence name="amnesia_respec">
            <!-- TODO: possibly use this soon-ish... doesn't work on servers right now -->
            <!-- https://discord.com/channels/243577046616375297/1120457997190189231 -->
            <action class="ResetPlayerData">
                <property name="reset_skills" value="true" />
                <property name="reset_books" value="false" />
                <property name="reset_crafting" value="false" />
                <property name="reset_levels" value="false" />
                <property name="remove_landclaims" value="false" />
                <property name="remove_bedroll" value="false" />
            </action>
            <action class="BeltTooltip">
                <property name="text_key" value="tipTherapyComplete" />
                <property name="sound" value="ui_trader_purchase" />
            </action>
        </action_sequence>
    </append>
</config>